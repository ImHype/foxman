#!/usr/bin/env node
'use strict';
var path = require('path');
var pkg = require('../package.json');
var config;
var argv = require('yargs')
    .usage('Usage: foxman [options]')
    .alias('c', 'config')
    .describe('c', '配置文件路径')
    .default('c', 'foxman.config.js')

    .alias('p', 'proxy')
    .describe('p', '使用配置中的代理，填写代理名即可')
    .default('p', false)

    .alias('u', 'update')
    .describe('u', '是否远程nei中拉取接口信息')
    .default('u', false)

    .alias('v', 'version')
    .describe('v', 'Show version')
    .version(() => pkg.version)

    .help('h')
    .alias('h', 'help')

    .example('foxman -c ./config.json -p local -u')
    .argv;

var configPath = path.join(process.cwd(), argv.config);

try {
	config = require(configPath);
} catch (err) {
	console.log(`Error:\n ${err}`);
	process.exit(1);
}

Object.assign(config, { argv });

require('../app.js')(config);
